name = "hn-telegram-bot"
main = "src/index.ts"
compatibility_date = "2024-01-01"

# Cron trigger - runs daily at 9:00 AM UTC
[[triggers]]
crons = ["0 9 * * *"]

# KV Namespace for deduplication
# Replace with your actual KV namespace ID after creation
[[kv_namespaces]]
binding = "HN_STORIES"
id = "your-kv-namespace-id-here"
preview_id = "your-preview-kv-namespace-id-here"

[vars]
HN_TOP_N = "10"
